<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <ImageView
            android:layout_width="166dp"
            android:layout_height="187dp" app:srcCompat="@drawable/map" android:id="@+id/logo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintVertical_bias="0.413"/>
    <TextView
            android:text="GeoTag App"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/coversubtitle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintVertical_bias="0.61" android:fontFamily="casual" android:textSize="40sp"/>
    <TextView
            android:text="By Ishan Roy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/coversubtitle"
            android:fontFamily="cursive" android:textSize="25sp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.704"/>
</androidx.constraintlayout.widget.ConstraintLayout>